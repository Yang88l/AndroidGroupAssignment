<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accommodation">

    <include
        android:id="@+id/topnavi"
        layout="@layout/topnavi"/>

    <ImageButton
        android:id="@+id/imageButton22"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="344dp"
        android:onClick="crystal_favourite"
        app:layout_constraintStart_toEndOf="@id/crystal_hotel"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/love" />

    <ImageButton
        android:id="@+id/image_hotel2"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="324dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crystal_hotel_77" />

    <Button
        android:id="@+id/crystal_hotel"
        android:layout_width="167dp"
        android:layout_height="83dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="324dp"
        android:onClick="crystal_hotel"
        android:text="Crystal Hotel"
        android:textSize="25dp"
        android:textColor="#0096FF"
        android:background="@drawable/button_design"
        app:layout_constraintStart_toEndOf="@id/image_hotel2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bovelord_hotel2"
        android:layout_width="167dp"
        android:layout_height="83dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="196dp"
        android:onClick="bovelord_hotel"
        android:text="Bevelord Hotel"
        android:textColor="#0096FF"
        android:background="@drawable/button_design"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@id/image_hotel1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="216dp"
        android:onClick="bevelord_favourite"
